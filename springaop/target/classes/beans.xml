<?xml version="1.0" encoding="UTF-8"?>  
    <beans xmlns="http://www.springframework.org/schema/beans"  
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
           xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">  
	
	<bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target">
			<ref bean="DaoImpl" />
		</property>

		<property name="proxyInterfaces">
			<value>study.spring.IDAO</value>
		</property>

		<property name="interceptorNames">
			<list>
				<value>interceptorReturning</value>
			</list>
		</property>
	</bean>


	<bean id="DaoImpl" class="study.spring.DAOImpl"></bean>
	<bean id="interceptorReturning" class="study.spring.DAOAdvice"></bean>
	
	<bean id = "manager" class = "Manager" ><property name="name"><value>Jack</value></property></bean>
	
	<bean id = "employee" class = "Employee">
		<property name="managerName" ref="manager" />
	</bean>
	
</beans>