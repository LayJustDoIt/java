<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:amq="http://activemq.apache.org/schema/core"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

	<bean id="pendingQueuePolicy" class="org.apache.activemq.broker.region.policy.FilePendingQueueMessageStoragePolicy" />
	<bean id="policyEntrie" class="org.apache.activemq.broker.region.policy.PolicyEntry">
		<property name="pendingQueuePolicy" ref="pendingQueuePolicy"></property>
		<property name="destination" ref="emailDestination"></property>
		<property name="memoryLimit" value="1024" />
		<property name="producerFlowControl" value="false" />
	</bean>
	<bean id="destinationPolicy" class="org.apache.activemq.broker.region.policy.PolicyMap">
		<property name="policyEntries" ref="policyEntrie" />
	</bean>
	<bean id="broker" class="org.apache.activemq.broker.BrokerService" init-method="start" destroy-method="stop">
		<property name="brokerName" value="emailBroker" />
		<property name="persistent" value="true" />
		<property name="destinationPolicy" ref="destinationPolicy" />
		<property name="dataDirectory" value="activemq/data" />
		<property name="transportConnectorURIs">
			<list>
				<value>tcp://localhost:61616</value>
			</list>
		</property>
	</bean>

