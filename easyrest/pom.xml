        </dependency>
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-cache-core</artifactId>
            <version>2.0-beta-2</version>
        </dependency>
        <dependency>
        	<groupId>org.slf4j</groupId>
