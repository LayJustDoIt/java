        	<version>1.5.8</version>
        	<type>jar</type>
        	<scope>compile</scope>
        </dependency>
  </dependencies>
 <build>
        <finalName>easyrest</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
